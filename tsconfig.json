{
  "extends": ["@tsconfig/node20/tsconfig.json", "@vue/tsconfig/tsconfig.dom.json"],
  "include": [
    "**/vitest.config.*",
    "**/src/**/*",
    "**/src/**/*.vue",
    "**/src/**/*.jsx",
    "**/src/**/*.tsx",
    "**/src/**/*.ts",
    "typings.d.ts"
  ],
  "exclude": ["**/src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "preserve",
    "paths": {
      "@antdv/pro-table": ["./packages/table/src/index.ts"],
      "@antdv/pro-form": ["./packages/form/src/index.ts"],
      "@antdv/pro-card": ["./packages/card/src/index.ts"],
      "@antdv/pro-utils": ["./packages/utils/src/index.ts"]
    },
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true
  }
}
