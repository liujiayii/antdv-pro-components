{
  "include": ["src/**/*.jsx", "src/**/*.tsx", "src/**/*.ts", "**/*.d.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "types": ["node"],
    "baseUrl": ".",
    "allowJs": true,
    "jsx": "preserve",
    "rootDirs": ["."],
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist",
    "skipLibCheck": true
  }
}
